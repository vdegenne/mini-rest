{
	"name": "@vdegenne/mini-rest",
	"version": "0.3.2",
	"description": "mini rest module",
	"type": "module",
	"exports": {
		".": {
			"default": "./lib/index.js",
			"types": "./lib/index.d.ts"
		}
	},
	"scripts": {
		"build": "wireit"
	},
	"wireit": {
		"build": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"./tsconfig.json",
				"./src/"
			],
			"output": [
				"./lib/"
			]
		}
	},
	"files": [
		"./lib"
	],
	"devDependencies": {
		"typescript": "^5.9.3",
		"wireit": "^0.14.12"
	}
}
